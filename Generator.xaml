                                             HorizontalAlignment="Center"
                                             Foreground="#F4EEE0"
                                             FontSize="13"
                                             TextAlignment="Center"/>

                                <Border Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Width="55"
                                      Height="25"
                                      Background="#F4EEE0"
                                      CornerRadius="5">
                                    <xctk:IntegerUpDown x:Name="NumberSelector"
                                                      Width="55"
                                                      Height="25"
                                                      VerticalAlignment="Center"
                                                      Padding="0"
                                                      BorderThickness="0"
                                                      Background="Transparent"
                                                      FontSize="13"
                                                      Minimum="1"
                                                      Maximum="8"
                                                      TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <Border Height="40"
                              Width="400"
                              Background="#6D5D6E"
                              CornerRadius="5"
                              Margin="50,0,0,20"
                              Padding="2"
                              HorizontalAlignment="Left">

                            <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                BlurRadius="5"
                                                ShadowDepth="0"
                                                Opacity="0.3"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Max Price:"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             Foreground="#F4EEE0"
                                             FontSize="13"
                                             TextAlignment="Center"/>

                                <Border Grid.Column="1"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Width="315"
                                          Height="25"
                                          Background="#F4EEE0"
                                          CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="255"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Slider x:Name="MaxPriceSlider"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Center"
                                                  Minimum="0"
                                                  Maximum="1"
                                                  Value="0"
                                                  SmallChange="0.05"
                                                  LargeChange="0.1"
                                                  TickFrequency="0.1"
                                                  IsSnapToTickEnabled="True"
                                                  Margin="5,0,5,0"/>
                                        <Border Grid.Column="1"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"
                                                  Width="50"
                                                  Background="White"
                                                  CornerRadius="5"
                                                  BorderThickness="1"
                                                  BorderBrush="LightGray"
                                                  Margin="5,0,5,0">
                                            <TextBox x:Name="MaxPriceTextBox"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding ElementName=MaxPriceSlider, Path=Value, StringFormat={}{0:F2}}"
                                                       TextAlignment="Center"
                                                       Background="Transparent"
                                                       BorderBrush="Transparent"
                                                        BorderThickness="0" Margin="0,0,0,0"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <Border Height="40"
                                  Width="400"
                                  Background="#6D5D6E"
                                  CornerRadius="5"
                                  Margin="50,0,0,0"
                                  Padding="2"
                                  HorizontalAlignment="Left">

                            <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                BlurRadius="5"
                                                ShadowDepth="0"
                                                Opacity="0.3"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="115"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Max Accessibility:"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Center"
                                         Foreground="#F4EEE0"
                                         FontSize="13"
                                         TextAlignment="Center"/>

                                <Border Grid.Column="1"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Width="275"
                                          Height="25"
                                          Background="#F4EEE0"
                                          CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="215"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Slider x:Name="MaxAccessibilitySlider"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Center"
                                                  Minimum="0"
                                                  Maximum="1"
                                                  Value="0"
                                                  SmallChange="0.05"
                                                  LargeChange="0.1"
                                                  TickFrequency="0.1"
                                                  IsSnapToTickEnabled="True"
                                                  Margin="5,0,5,0"/>
                                        <Border Grid.Column="1"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"
                                                  Width="50"
                                                  Background="White"
                                                  CornerRadius="5"
                                                  BorderThickness="1"
                                                  BorderBrush="LightGray"
                                                  Margin="5,0,5,0">
                                            <TextBox x:Name="MaxAccessibilityTextBox"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding ElementName=MaxAccessibilitySlider, Path=Value, StringFormat={}{0:F2}}"
                                                       TextAlignment="Center"
                                                       Background="Transparent"
                                                       BorderBrush="Transparent"
                                                       BorderThickness="0" Margin="0,0,-1,0"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <Button Width="80"
                                Height="14"
                                Grid.Row="1"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0"
                                Content="Reset filters"
                                Background="Transparent"
                                Foreground="#F4EEE0"
                                FontSize="10"
                                BorderBrush="Transparent"
                                Click="ResetFilters_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <TextBlock x:Name="textBlock"
                                                           Text="{TemplateBinding Content}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="textBlock" Property="TextDecorations" Value="Underline"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Width="150"
                                  Height="40"
                                  VerticalAlignment="Bottom"
                                  HorizontalAlignment="Center"
                                  Margin="0,35,0,0"
                                  Content="Generate Activity"
                                  Foreground="#F4EEE0"
                                  FontSize="15"
                                Click="FilterGen_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#6D5D6E"
